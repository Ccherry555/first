/* pages/index/index.wxss */
/* 互动点子库 - 主页面样式 */

.container {
  min-height: 100vh;
  padding: 30rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 50rpx;
  padding: 40rpx 0;
}

.main-title {
  display: block;
  font-size: 42rpx;
  font-weight: bold;
  color: #D32F2F;
  margin-bottom: 20rpx;
}

.sub-title {
  display: block;
  font-size: 28rpx;
  color: #FF6F00;
}

/* 场景选择区 */
.scene-section {
  background: linear-gradient(135deg, #FFE0E0 0%, #FFF8E1 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.15);
}

.scene-scroll {
  width: 100%;
  overflow: hidden;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #D32F2F;
  margin-bottom: 30rpx;
  text-align: center;
}

.scene-buttons {
  display: flex;
  flex-wrap: nowrap;
  gap: 24rpx;
  padding: 0 10rpx;
}

.scene-btn {
  flex: 0 0 auto;
  min-width: 180rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #FFD54F 0%, #FFC107 100%);
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(255, 193, 7, 0.3);
  transition: all 0.3s;
  /* 让文字和表情在按钮中完全居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0 24rpx;
}

.scene-btn.active {
  background: linear-gradient(135deg, #D32F2F 0%, #F44336 100%);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(211, 47, 47, 0.4);
  transform: scale(1.05);
}

.scene-btn::after {
  border: none;
}

/* 生成模式区 */
.generate-section {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.15);
}

.random-btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #D32F2F 0%, #F44336 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  border: none;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(211, 47, 47, 0.3);
  /* 文本和表情完全居中 */
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.random-btn::after {
  border: none;
}

.game-list {
  margin-top: 30rpx;
}

.list-title {
  display: block;
  font-size: 28rpx;
  color: #D32F2F;
  margin-bottom: 20rpx;
  font-weight: 500;
  text-align: center;
}

.game-item {
  background: #fff;
  padding: 25rpx 30rpx;
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  text-align: center;
}

.game-item:active {
  background: #FFF3E0;
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.2);
}

.game-item.active {
  background: linear-gradient(135deg, #FFCDD2 0%, #F8BBD0 100%);
  color: #D32F2F;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.25);
  transform: scale(1.02);
}

/* 游戏详情区 */
.detail-section {
  background: linear-gradient(135deg, #FFE0E0 0%, #FFF8E1 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(211, 47, 47, 0.2);
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #FFD54F;
}

.game-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #D32F2F;
}

.change-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
  background: linear-gradient(135deg, #FFD54F 0%, #FFC107 100%);
  color: #333;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: none;
}

.change-btn::after {
  border: none;
}

.detail-item {
  margin-bottom: 30rpx;
}

.detail-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #D32F2F;
  margin-bottom: 15rpx;
}

.detail-content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
}

/* 道具列表 */
.props-list {
  background: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.props-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.props-dot {
  color: #FF6F00;
  font-weight: bold;
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 规则列表 */
.rules-list {
  background: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.rule-item {
  display: flex;
  align-items: flex-start;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
}

.rule-num {
  color: #D32F2F;
  font-weight: bold;
  margin-right: 10rpx;
  min-width: 40rpx;
}

.rule-text {
  flex: 1;
}

/* 游戏入口区 */
.game-entrances {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.game-btn {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  border: none;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.3);
}

.game-btn::after {
  border: none;
}

.game24-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: #fff;
}

.mahjong-btn {
  background: linear-gradient(135deg, #E91E63 0%, #C2185B 100%);
  color: #fff;
}

.mahjong-area {
  background: linear-gradient(135deg, #FCE4EC 0%, #F8BBD0 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(233, 30, 99, 0.2);
}

.mahjong-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #E91E63;
}

.mahjong-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #880E4F;
}

.mahjong-close {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  color: #666;
  font-size: 32rpx;
  border-radius: 50%;
  border: none;
  padding: 0;
}

.mahjong-close::after {
  border: none;
}

.mahjong-rules {
  margin-bottom: 30rpx;
  text-align: center;
}

.mahjong-rule-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

/* 万子牌选择区 */
.mahjong-tiles-section {
  margin-bottom: 30rpx;
}

.mahjong-tiles-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #880E4F;
  margin-bottom: 20rpx;
  text-align: center;
}

.mahjong-tiles {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 15rpx;
}

.mahjong-tile {
  width: 80rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F5F5F5 100%);
  border: 2rpx solid #333;
  border-radius: 12rpx;
  color: #333;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mahjong-tile::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  pointer-events: none;
}

.mahjong-tile:active {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.mahjong-tile::after {
  border: none;
}

.mahjong-tile-content {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.mahjong-tile-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.mahjong-tile-suit {
  font-size: 32rpx;
  font-weight: bold;
  color: #D32F2F;
  text-align: center;
}

/* 手牌展示区 */
.mahjong-hand-section {
  margin-bottom: 30rpx;
}

.mahjong-hand-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #880E4F;
  margin-bottom: 20rpx;
  text-align: center;
}

.mahjong-hand-scroll {
  width: 100%;
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.mahjong-hand {
  display: flex;
  gap: 15rpx;
  padding: 10rpx 0;
  justify-content: center;
}

.mahjong-hand-tile {
  width: 80rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F5F5F5 100%);
  border: 2rpx solid #333;
  border-radius: 12rpx;
  color: #333;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mahjong-hand-tile::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  right: 10rpx;
  bottom: 10rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  pointer-events: none;
}

.mahjong-hand-tile:active {
  background: linear-gradient(135deg, #FFCDD2 0%, #F8BBD0 100%);
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 操作按钮区 */
.mahjong-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.mahjong-clear-btn,
.mahjong-check-btn {
  flex: 1;
  min-height: 90rpx;
  border-radius: 45rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.mahjong-clear-btn {
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.mahjong-check-btn {
  background: linear-gradient(135deg, #E91E63 0%, #C2185B 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(233, 30, 99, 0.3);
}

.mahjong-check-btn:disabled {
  background: #BDBDBD;
  color: #fff;
  box-shadow: none;
}

.mahjong-clear-btn::after,
.mahjong-check-btn::after {
  border: none;
}

/* 结果展示区 */
.mahjong-result {
  margin-top: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.mahjong-result-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #880E4F;
  margin-bottom: 20rpx;
  text-align: center;
}

.mahjong-result-text {
  display: inline;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.mahjong-result-value {
  display: inline;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
}

.mahjong-result-row {
  display: block;
  margin-bottom: 10rpx;
  line-height: 1.6;
  text-align: center;
}

/* 规则说明区 */
.mahjong-rule-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #FFF3E0;
  border-radius: 15rpx;
  text-align: center;
}

.mahjong-rule-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #880E4F;
  margin-bottom: 15rpx;
  text-align: center;
}

.mahjong-rule-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  align-items: center;
}

.mahjong-rule-item {
  font-size: 24rpx;
  color: #555;
  line-height: 1.6;
  text-align: center;
  max-width: 90%;
}

.game24-area {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.2);
}

.game24-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #4CAF50;
}

.game24-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2E7D32;
}

.game24-close {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  color: #666;
  font-size: 32rpx;
  border-radius: 50%;
  border: none;
  padding: 0;
}

.game24-close::after {
  border: none;
}

.game24-rules {
  margin-bottom: 30rpx;
  text-align: center;
}

.game24-rule-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

.game24-numbers {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.game24-number {
  flex: 1;
  height: 120rpx;
  line-height: 120rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  border-radius: 15rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.game24-input-section {
  margin-bottom: 20rpx;
}

.game24-input-label {
  display: block;
  font-size: 28rpx;
  color: #2E7D32;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.game24-input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #4CAF50;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 24点算术虚拟键盘 */
.game24-keyboard {
  margin-bottom: 20rpx;
}

.game24-key-row {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.game24-key {
  flex: 1;
  margin-right: 10rpx;
  min-height: 70rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid #C8E6C9;
  font-size: 28rpx;
  color: #2E7D32;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
}

.game24-key:last-child {
  margin-right: 0;
}

.game24-key.wide {
  flex: 1.5;
}

.game24-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  justify-content: space-between;
}

.game24-submit-btn,
.game24-new-btn,
.game24-answer-btn {
  flex: 1;
  min-width: calc(33.33% - 10rpx);
  min-height: 90rpx;
  padding: 12rpx 8rpx;
  border-radius: 45rpx;
  border: none;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.5;
  box-sizing: border-box;
}

.game24-submit-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.game24-new-btn {
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.game24-answer-btn {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.game24-submit-btn::after,
.game24-new-btn::after,
.game24-answer-btn::after {
  border: none;
}

.game24-message {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  text-align: center;
}

.game24-message-text {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.6;
}

.game24-message-text.success {
  color: #4CAF50;
  background: #E8F5E9;
}

.game24-message-text.error {
  color: #F44336;
  background: #FFEBEE;
}

/* 联系我们区域 */
.contact-section {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #FFF8E1 0%, #FFE0E0 100%);
  border-radius: 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(211, 47, 47, 0.15);
}

.contact-text {
  font-size: 30rpx;
  color: #D32F2F;
  font-weight: 500;
  line-height: 1.6;
}

/* 适配小屏幕 */
@media screen and (max-width: 375px) {
  .main-title {
    font-size: 36rpx;
  }
  
  .scene-btn {
    font-size: 28rpx;
  }
  
  .contact-text {
    font-size: 26rpx;
  }
}
