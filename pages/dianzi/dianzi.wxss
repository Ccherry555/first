/* pages/dianzi/dianzi.wxss */
/* 互动点子库 - 点子tab页面样式 */

/* 全局样式 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #FFF3E0;
  display: flex;
  flex-direction: column;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #D32F2F;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.sub-title {
  font-size: 24rpx;
  color: #FFE0B2;
  display: block;
}

/* 场景选择区 */
.scene-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.scene-scroll {
  width: 100%;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.scene-buttons {
  display: inline-flex;
  padding-bottom: 10rpx;
}

.scene-btn {
  margin: 0 10rpx;
  padding: 15rpx 30rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: bold;
  background-color: white;
  color: #666;
  border: 2rpx solid #E0E0E0;
  transition: all 0.3s ease;
}

.scene-btn.active {
  background-color: #D32F2F;
  color: white;
  border-color: #D32F2F;
}

.scene-btn:active {
  transform: scale(0.95);
}

/* 生成模式区 */
.generate-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.random-btn {
  width: 100%;
  padding: 20rpx;
  background-color: #FF9800;
  color: white;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border: none;
  transition: all 0.3s ease;
}

.random-btn:active {
  transform: scale(0.98);
}

/* 游戏列表 */
.game-list {
  margin-top: 20rpx;
}

.list-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.game-item {
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  color: #333;
  transition: all 0.3s ease;
  border-left: 5rpx solid #E0E0E0;
}

.game-item.active {
  background-color: #E3F2FD;
  border-left-color: #1976D2;
  color: #1565C0;
}

.game-item:active {
  transform: scale(0.98);
  background-color: #EEEEEE;
}

/* 游戏详情区 */
.detail-section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #EEEEEE;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #D32F2F;
}

.change-btn {
  padding: 10rpx 20rpx;
  background-color: #FF9800;
  color: white;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease;
}

.change-btn:active {
  transform: scale(0.95);
}

/* 游戏详情项 */
.detail-item {
  margin-bottom: 25rpx;
}

.detail-label {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.detail-content {
  font-size: 22rpx;
  color: #666;
  line-height: 1.5;
}

/* 道具列表 */
.props-list {
  margin-top: 10rpx;
}

.props-item {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.props-dot {
  font-size: 24rpx;
  color: #D32F2F;
  margin-right: 10rpx;
}

/* 规则列表 */
.rules-list {
  margin-top: 10rpx;
}

.rule-item {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: flex;
  align-items: flex-start;
}

.rule-num {
  font-size: 22rpx;
  font-weight: bold;
  color: #D32F2F;
  margin-right: 10rpx;
  min-width: 30rpx;
}

.rule-text {
  flex: 1;
  line-height: 1.5;
}

/* 联系我们区域 */
.contact-section {
  margin-top: auto;
  padding: 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: #666;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.contact-text {
  display: block;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .main-title {
    font-size: 32rpx;
  }
  
  .sub-title {
    font-size: 20rpx;
  }
  
  .scene-btn {
    font-size: 20rpx;
    padding: 12rpx 24rpx;
  }
  
  .game-name {
    font-size: 28rpx;
  }
  
  .detail-label {
    font-size: 22rpx;
  }
  
  .detail-content {
    font-size: 20rpx;
  }
}
