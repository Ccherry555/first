  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.mahjong-guess-attempts-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #FF9800;
}

/* 公布答案按钮样式 */
.mahjong-guess-answer-btn {
  width: 100%;
  padding: 20rpx;
  background-color: #9C27B0;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  border: none;
  margin-top: 10rpx;
}

.mahjong-guess-answer-btn:active {
  transform: scale(0.98);
}

/* 答案显示区样式 */
.mahjong-answer-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #F3E5F5;
  border-radius: 15rpx;
  border: 2rpx solid #9C27B0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.mahjong-answer-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #7B1FA2;
  text-align: center;
  margin-bottom: 15rpx;
  display: block;
}

.mahjong-answer-message {
  font-size: 22rpx;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
  display: block;
}

/* 麻将规则说明区 */
.mahjong-rule-section {
  padding: 20rpx;
  background-color: #F5F5F5;
  border-radius: 10rpx;
}

.mahjong-rule-title {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.mahjong-rule-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.mahjong-rule-item {
  font-size: 20rpx;
  color: #666;
  line-height: 1.4;
}

/* 联系我们区域 */
.contact-section {
  margin-top: auto;
  padding: 20rpx;
  text-align: center;
  font-size: 20rpx;
  color: #666;
  background-color: white;
  border-radius: 10rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.contact-text {
  display: block;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .game-btn {
    font-size: 24rpx;
  }
  
  .game24-number {
    width: 70rpx;
    height: 70rpx;
    font-size: 32rpx;
  }
  
  .mahjong-tile {
    width: 70rpx;
    height: 100rpx;
  }
  
  .mahjong-hand-tile {
    width: 60rpx;
    height: 85rpx;
  }
}
