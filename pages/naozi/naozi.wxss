/* pages/naozi/naozi.wxss */
/* 互动点子库 - 脑子tab页面样式 */

/* 全局样式 */
.container {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #FFF3E0;
  display: flex;
  flex-direction: column;
}

/* 标题区域 */
.title-section {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #D32F2F;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.main-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.sub-title {
  font-size: 24rpx;
  color: #FFE0B2;
  display: block;
}

/* 游戏入口区 */
.game-entrances {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.game-btn {
  width: 45%;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.game-btn:active {
  transform: scale(0.95);
}

.game24-btn {
  background-color: #388E3C;
  color: white;
}

.mahjong-btn {
  background-color: #1976D2;
  color: white;
}

/* 24点算术区域 */
.game24-area {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.2);
}

.game24-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #4CAF50;
}

.game24-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2E7D32;
}

.game24-close {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  color: #666;
  font-size: 32rpx;
  border-radius: 50%;
  border: none;
  padding: 0;
}

.game24-close::after {
  border: none;
}

.game24-rules {
  margin-bottom: 30rpx;
  text-align: center;
}

.game24-rule-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}

/* 24点数字显示 */
.game24-numbers {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.game24-number {
  flex: 1;
  height: 120rpx;
  line-height: 120rpx;
  background: linear-gradient(135deg, #4CAF50 0%, #66BB6A 100%);
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  border-radius: 15rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

/* 24点输入区域 */
.game24-input-section {
  margin-bottom: 20rpx;
}

.game24-input-label {
  display: block;
  font-size: 28rpx;
  color: #2E7D32;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.game24-input {
  width: 100%;
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #4CAF50;
  border-radius: 15rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 24点虚拟键盘 */
.game24-keyboard {
  margin-bottom: 20rpx;
}

.game24-key-row {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.game24-key {
  flex: 1;
  margin-right: 10rpx;
  min-height: 70rpx;
  background: #ffffff;
  border-radius: 12rpx;
  border: 2rpx solid #C8E6C9;
  font-size: 28rpx;
  color: #2E7D32;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.04);
}

.game24-key:last-child {
  margin-right: 0;
}

.game24-key.wide {
  flex: 1.5;
}

/* 24点按钮区域 */
.game24-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  justify-content: space-between;
}

.game24-submit-btn,
.game24-new-btn,
.game24-answer-btn {
  flex: 1;
  min-width: calc(33.33% - 10rpx);
  min-height: 90rpx;
  padding: 12rpx 8rpx;
  border-radius: 45rpx;
  border: none;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
  line-height: 1.5;
  box-sizing: border-box;
}

.game24-submit-btn {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.game24-new-btn {
  background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 152, 0, 0.3);
}

.game24-answer-btn {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
}

.game24-submit-btn::after,
.game24-new-btn::after,
.game24-answer-btn::after {
  border: none;
}

/* 24点提示信息 */
.game24-message {
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  text-align: center;
}

.game24-message-text {
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1.6;
}

.game24-message-text.success {
  color: #4CAF50;
  background: #E8F5E9;
}

.game24-message-text.error {
  color: #F44336;
  background: #FFEBEE;
}

.game24-message-text.info {
  color: #2196F3;
  background: #E3F2FD;
}

/* 麻将胡牌区域 */
.mahjong-area {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.mahjong-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.mahjong-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1976D2;
}

.mahjong-close {
  font-size: 32rpx;
  color: #666;
  background: none;
  border: none;
  padding: 0;
}

.mahjong-rules {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #E8F5E8;
  border-radius: 10rpx;
}

.mahjong-rule-text {
  font-size: 24rpx;
  color: #2E7D32;
  line-height: 1.5;
}

/* 麻将牌选择区 */
.mahjong-tiles-section {
  margin-bottom: 30rpx;
}

.mahjong-tiles-label {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.mahjong-tiles {
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  padding: 0 5rpx;
  margin-bottom: 20rpx;
}

.mahjong-tile {
  flex: 1;
  height: 80rpx;
  margin: 0 3rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F5F5F5;
  border: 2rpx solid #E0E0E0;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  /* 确保按钮没有默认样式 */
  padding: 0;
  line-height: normal;
  font-size: normal;
  font-weight: normal;
  color: #333;
  background: linear-gradient(135deg, #FFFFFF 0%, #F0F0F0 100%);
  min-width: 50rpx;
}

.mahjong-tile-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 5rpx;
  box-sizing: border-box;
}

.mahjong-tile-number {
  font-size: 20rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 2rpx;
  line-height: 1;
}

.mahjong-tile-suit {
  font-size: 24rpx;
  font-weight: bold;
  color: #D32F2F;
  line-height: 1;
}

.mahjong-tile::after {
  border: none !important;
}

.mahjong-tile:hover {
  transform: scale(1.02);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.mahjong-tile:active {
  transform: scale(0.9) !important;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2) !important;
  background-color: #E0E0E0 !important;
  background: linear-gradient(135deg, #E0E0E0 0%, #D0D0D0 100%) !important;
  /* 确保点击效果明显 */
  animation: clickEffect 0.2s ease-in-out !important;
}

/* 点击动画效果 */
@keyframes clickEffect {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.85);
    background-color: #D0D0D0;
  }
  100% {
    transform: scale(0.9);
    background-color: #E0E0E0;
  }
}



/* 手牌展示区 */
.mahjong-hand-section {
  margin-bottom: 30rpx;
  padding: 0 5rpx;
}

.mahjong-hand-label {
  display: block;
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.mahjong-hand-scroll {
  width: 100%;
  white-space: nowrap;
  margin-bottom: 10rpx;
}

.mahjong-hand {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 3rpx;
}

.mahjong-hand-tile {
  width: 50rpx;
  height: 70rpx;
  margin: 0 3rpx;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFF9C4;
  border: 2rpx solid #FFD54F;
  position: relative;
  overflow: hidden;
  flex-shrink: 0;
}

.mahjong-hand-tile::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FFFFFF 0%, #FFFDE7 100%);
  z-index: 0;
}

.mahjong-hand-tile .mahjong-tile-content {
  position: relative;
  z-index: 1;
}

.mahjong-hand-tile .mahjong-tile-number {
  font-size: 16rpx;
  margin-bottom: 1rpx;
}

.mahjong-hand-tile .mahjong-tile-suit {
  font-size: 20rpx;
}

/* 麻将操作按钮区 */
.mahjong-buttons {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.mahjong-clear-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  background-color: #FF9800;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  border: none;
}

.mahjong-check-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 20rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  border: none;
}

.mahjong-check-btn:disabled {
  background-color: #BDBDBD;
  color: #FFFFFF;
}

/* 麻将结果展示区 */
.mahjong-result {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #E8F5E8;
  border-radius: 10rpx;
}

.mahjong-result-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #2E7D32;
  margin-bottom: 15rpx;
}

.mahjong-result-row {
  display: flex;
  margin-bottom: 10rpx;
}

.mahjong-result-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  width: 120rpx;
}

.mahjong-result-value {
  font-size: 22rpx;
  color: #333;
  flex: 1;
}

.mahjong-result-tiles {
  flex: 1;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.mahjong-result-tiles .mahjong-hand-tile {
  width: 60rpx;
  height: 90rpx;
  margin: 5rpx;
}

.mahjong-result-empty {
  font-size: 22rpx;
  color: #333;
}

.selectable-tile {
  cursor: pointer;
  transition: all 0.2s ease;
}

.selectable-tile:active {
  transform: scale(1.1);
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.mahjong-selected-hu {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #FFF8E1;
  border-radius: 15rpx;
  border: 2rpx solid #FFC107;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.mahjong-selected-hu-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #F57F17;
  text-align: center;
  margin-bottom: 20rpx;
}

.mahjong-selected-hu-content {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.mahjong-selected-hu-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
  margin-right: 15rpx;
}

.mahjong-selected-hu-tile {
  margin: 0 5rpx;
}

.mahjong-selected-hu-hand {
  margin-bottom: 20rpx;
}

.mahjong-selected-hu-hand-label {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.mahjong-reset-btn {
  width: 100%;
  padding: 15rpx;
  background-color: #FF9800;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  border: none;
  margin-top: 10rpx;
}

.mahjong-reset-btn:active {
  transform: scale(0.98);
}

/* 猜胡区样式 */
.mahjong-guess-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #E3F2FD;
  border-radius: 15rpx;
  border: 2rpx solid #1976D2;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.mahjong-guess-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #1565C0;
  margin-bottom: 20rpx;
  display: block;
}

.mahjong-guess-tiles {
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 5rpx;
}

.guessable-tile {
  flex: 1;
  height: 80rpx;
  margin: 0 3rpx;
  cursor: pointer;
  position: relative;
  transition: all 0.2s ease;
  min-width: 50rpx;
}

.guessable-tile:active {
  transform: scale(1.05);
}

.mahjong-tile-selected {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(33, 150, 243, 0.3);
  border-radius: 4rpx;
  border: 2rpx solid #1976D2;
  z-index: 2;
}

.mahjong-guess-confirm-btn {
  width: 100%;
  padding: 20rpx;
  background-color: #1976D2;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
  border: none;
  margin-top: 10rpx;
}

.mahjong-guess-confirm-btn:active {
  transform: scale(0.98);
}

/* 用户选择的牌显示区样式 */
.mahjong-selected-tiles-section {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.mahjong-selected-tiles-label {
  font-size: 22rpx;
  font-weight: bold;
  color: #1565C0;
  margin-bottom: 10rpx;
  display: block;
}

.mahjong-selected-tiles {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  padding: 0 5rpx;
  width: 100%;
}

.mahjong-selected-tiles .mahjong-hand-tile {
  width: 48rpx;
  height: 72rpx;
  margin: 0 5rpx;
  min-width: 48rpx;
  flex: none;
}

.mahjong-selected-tiles-empty {
  font-size: 20rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 猜胡结果区样式 */
.mahjong-guess-result {
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.mahjong-guess-result-title {
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 15rpx;
  display: block;
}

.mahjong-guess-result-message {
  font-size: 24rpx;
