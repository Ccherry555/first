}

.mahjong-guess-result-correct-text {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.mahjong-guess-reset-btn {
  width: 100%;
  padding: 20rpx;
  background-color: #FF9800;
  color: white;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
